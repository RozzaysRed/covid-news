{
  "name": "twilio-hackathon",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "server": "node ./dist-server/bin/www",
    "dev": "npm-run-all build server",
    "prod": "npm-run-all build server",
    "transpile": "babel ./server/src --out-dir dist-server --copy-files",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "watch:dev": "nodemon -e js,jade,json,mjs",
    "watch:start": "nodemon -e js,jade,json,mjs",
    "mocha": "mocha 'server/test/*.test.js' --require @babel/polyfill --require @babel/register",
    "test": "npm-run-all build mocha"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "cookie-parser": "~1.4.4",
    "cron": "^1.8.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "mongoose": "^5.9.9",
    "morgan": "~1.9.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "twilio": "^3.42.1"
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "server/src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/register": "^7.0.0",
    "mocha": "^10.2.0"
  }
}
