extends layout


block content
       .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Covid-19 Daily Updates - Sign Up
                form(method='POST' action='/user')
                    div.form-group
                        label(for='phoneNumber') Phone Number: +1
                        input.form-control(type='text' id='phoneNumber' placeholder='phone number' name='phoneNumber')
                    div.form-group
                        -var states = ["AL","AK","AS","AZ","AR","CA","CO","CT","DE","DC","FM","FL","GA","GU","HI","ID","IL","IN","IA","KS","KY","LA","ME","MH","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","MP","OH","OK","OR","PW","PA","PR","RI","SC","SD","TN","TX","UT","VT","VI","VA","WA","WV","WI","WY"];
                        label(for='stateAbbrev') State Abbreviation: 
                        select.form-control(id='stateAbbrev' name='stateAbbrev')
                            -for(var i = 0; i < states.length; i++){
                                option(value="#{states[i]}") #{states[i]}
                            -}
                    button.btn.btn-primary(type='submit') Sign Up